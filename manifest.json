{
  "manifest_version": 2,
  "name": "FlowWatch",
  "version": "1.0",
  "description": "A simple stopwatch Chrome extension.",
  "browser_action": {
    "default_icon": {
      "48": "images/icon48.png",
      "96": "images/icon96.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png"
  },
  "options_page": "record.html"
}
