{
  "manifest_version": 2,
  "name": "FlowWatch",
  "version": "1.0",
  "description": "A stopwatch Chrome extension with Google Calendar integration.",
  "browser_action": {
    "default_icon": {
      "48": "images/icon48.png",
      "96": "images/icon96.png"
    }
  },
  "permissions": [
    "alarms",
    "storage",
    "activeTab",
    "identity"
  ],
  "oauth2": {
    "client_id": "579547506966-hriv9n6a30e9lkmr0r99s0uhneonhof7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png"
  },
  "web_accessible_resources": [
    "audio/focus_compressed.opus"
  ],
  "options_page": "record.html",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "audio/focus_compressed.opus",
    "oauth2-init.html",
    "oauth2-init.js"
  ]
}
